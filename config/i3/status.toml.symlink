# vim:filetype=toml

icons_format = "{icon}"

[icons]
icons = "awesome4"

# <<<<< Colors <<<<<
# vi:syntax=toml

# base16-i3status-rust (https://github.com/mystfox/base16-i3status-rust)
# Google Dark by Seth Wright (http://sethawright.com)

[theme]
theme = "solarized-dark"
[theme.overrides]
idle_bg = "#1d1f21"
idle_fg = "#c5c8c6"
info_bg = "#3971ED"
info_fg = "#1d1f21"
good_bg = "#198844"
good_fg = "#1d1f21"
warning_bg = "#FBA922"
warning_fg = "#1d1f21"
critical_bg = "#CC342B"
critical_fg = "#1d1f21"
# The rest of the theme settings are left at default.
# >>>>> Colors >>>>>

[[block]]
block = "focused_window"

