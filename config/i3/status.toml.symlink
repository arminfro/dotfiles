[[block]]
block = "disk_space"
info_type = "available"
alert_unit = "GB"
alert = 10.0
warning = 15.0
format = " $icon $used/$total ($available free) "

[[block]]
block = "memory"
format = " $icon_swap $mem_used/$mem_total ($mem_total_used_percents) "
interval = 30
warning_mem = 70
critical_mem = 90

[[block]]
block = "cpu"
interval = 1
format = " $icon $barchart $utilization "

[[block]]
block = "load"
format = " $icon 1m:$1m, 5m:$5m "
interval = 1

[[block]]
block = "uptime"

[[block]]
block = "time"
interval = 5
format = " $timestamp.datetime(f:'%a %d/%m %T') "

