# vi: ft=conf

## This picomrc adjust this fork: https://github.com/jonaburg/picom ##
## Use --experimental-backends to enable blur and radius style ##

# Backend
# glx mode have more performance, prevent tearing
backend = "glx";

# # blur style (need --experimental-backends)
# # enable blur-style maybe make corner shadow, you can disable shadow
blur: {
  method = "dual_kawase";
  #method = "kernel";
  strength = 6;
  # deviation = 1.0;
  # kernel = "11x11gaussian";
  background = true;
  background-frame = true;
  background-fixed = true;
  kern = "3x3box";
}
blur-background-exclude = [
  "class_g = 'slop'",
  "_GTK_FRAME_EXTENTS@:c",
#  "window_type = 'unknown'",
  "window_type = 'desktop'",
  "window_type = 'dock'",
#  "window_type = 'toolbar'",
  "window_type = 'menu'",
#  "window_type = 'utility'",
  "window_type = 'splash'",
#  "window_type = 'dialog'",
#  "window_type = 'normal'",
  "window_type = 'dropdown_menu'",
  "window_type = 'popup_menu'",
  "window_type = 'notification'",
  "window_type = 'combo'",
  "window_type = 'dnd'",
  "class_g = 'dmenu'",
];

